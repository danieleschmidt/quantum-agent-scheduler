# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 4

# Configuration files
[*.{ini,cfg}]
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_size = 4